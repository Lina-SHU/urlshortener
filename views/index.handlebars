<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">URL Shortener<i class="fas fa-link"></i></h1>
          <hr>
          <form method="POST" action="/">
            <div class="form-group form-row">
              <div class="col">
                <input type="url" name="urlshorten" class="form-control" id="exclude-characters"
                  placeholder="Input URL here">
              </div>
            </div>

            <button class="btn btn-success" type="submit">Shorten</button>
            {{#if shortener}}
            <div class="alert alert-info" role="alert">
              <span class="mr-2">Success! Please use this link:</span> <code>{{shortener}}</code>
            </div>
            {{/if}}
          </form>
        </div>
      </div>
    </div>
  </div>
</div>